<label class="col-md-3 control-label">{{'分类'|trans}}</label>
{% if type == 'course' or type == 'live' %}
<div class="col-md-8 controls course-category">
  <select name="categoryId" required="required" class="form-control width-input width-input-large">
    {{ select_options(category_choices('course'), categoryId, '分类'|trans) }}
  </select>
  <div class="help-block" style="display:none;"></div>
</div>
{% else %}
 <div class="col-md-8 controls classroom-category">
  <select name="categoryId" required="required" class="form-control width-input width-input-large">
    {{ select_options(category_choices('classroom'), categoryId, '分类'|trans) }}
  </select>
  <div class="help-block" style="display:none;"></div>
</div>       
{% endif %}

