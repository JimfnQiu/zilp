            <label>
              <input type="radio" name="sms_classroom_publish" value="off"
                {% if (setting('cloud_sms.sms_classroom_publish')|default('off')) != 'on' %}checked="checked"{% endif %}> {{ '关闭'|trans }}
            </label>
          </td>
        </tr>
        <tr>
          <td>通知类</td>
          <td>新课程发布</td>
          <td>
