{% extends 'TopxiaAdminBundle::layout.html.twig' %}

{% set menu = 'admin_edu_cloud_search_overview' %}
{% set script_controller = 'setting/search' %}
{% set script_arguments = {chartData: chartData}  %}

{% block page_title %}
  {% if setting('cloud_status.locked') == true %}
    <div class="alert alert-warning" role="alert">{{'您的教育云服务已被锁定，请联系客服人员：'|trans}}4008041114。</div>
    {{ currentMenu.code|parent_permission.name|trans }}
  {% else %}
    {{ parent() }}
  {% endif %}
{% endblock %}

{% block main %}
<div class="panel panel-default">
  <div class="panel-heading">
    基本信息 
  </div>
  <div class="panel-body">
    <div class="pll pbl">
      累计搜索次数：
      <span class="h3 text-primary plm prs">{{searchOverview.total}}</span>次
    </div>
    <div class="pll pbm">
      今日搜索次数：
      <span class="color-gray phm text-md">{{searchOverview.todayUsed}} 条</span>
    </div>
  </div>
</div>
<div class="panel panel-default panel-chart">
  <div class="panel-heading">
    搜索行为趋势
    <span class="text-muted">（最近1个月）</span>
    <a class="pull-right" href="{{path('admin_cloud_search_detail')}}" target="_blank">更多&ensp;></a>
  </div>
  <div class="panel-body">
    <div id="searchChart" style="width: 100%;height:400px;"></div>
  </div>
</div>
{% endblock %}