<div class="card-pack-item card-item">
  <h4>{{'学习卡'|trans}}</h4>
  <p class="title">{{'学习卡可以用于账户充值'|trans}}</p>
  <p class="price">
    <strong>{{ cardDetail.coin }}</strong>{{ coin.coin_name|default('虚拟币'|trans) }}
    <a class="money-card-use" href="javascript:;" data-url="{{ path('money_card_use_without_password',{ id:cardDetail.id,filter:app.request.query.get('filter') }) }}" data-target-url="{{ path('my_cards', {cardType:'moneyCard', filter:app.request.query.get('filter')}) }}">{{'立即使用'|trans}}</a>
    <input class="card-coin-val" type="hidden" value="{{ cardDetail.coin }}"></input>
  </p>
  <p>{{'有效期截止：'|trans}}<span>{{'%deadline%年'|trans({'%deadline%': cardDetail.deadline|date('Y')})}}{{'%deadline%月'|trans({'%deadline%': cardDetail.deadline|date('n')}) }}{{'%deadline%日'|trans({'%deadline%': cardDetail.deadline|date('d')}) }}</span></p>
</div>
