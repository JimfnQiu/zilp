{% extends 'TopxiaWebBundle:MyCourse:layout.html.twig' %}

{% block title %}{{'学习中'|trans}} - {{ parent() }}{% endblock %}

{% set tab_nav = 'learning' %}
{% set mobile = is_show_mobile_page() %}

{% block main %}
	<div class="panel panel-default panel-col">
	  <div class="panel-heading">{{'我的课程'|trans}}</div>
	  <div class="panel-body">
  		  	 {% include 'TopxiaWebBundle:MyCourse:nav-pill.html.twig' %}
	  	 {% if courses %}
		     {{ render(controller('TopxiaWebBundle:Course:coursesBlock', {courses:courses, view: 'grid', mode:'learn'})) }}
				{{ web_macro.paginator(paginator) }}
		  {% else %}
		    <div class="empty">{{'暂无学习中的课程'|trans}}</div>
		  {% endif %}
	  </div>
	</div>

{% endblock %}

{% block main_mobile %}
	{% if mobile %}
		{% include 'TopxiaWebBundle:MyCourse:learning-mobile.html.twig' %}
	{% endif %}
{% endblock %}

{% block bottom %}
  {% include 'TopxiaWebBundle:Default:Mobile/footer-tool-bar.html.twig' with { mobile_tool_bar: 'learning' } %}
{% endblock %}



